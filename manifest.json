{
  "manifest_version": 3,
  "name": "Nom de votre extension",
  "version": "1.0",
  "description": "Description de votre extension",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "poster.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://api.openai.com/"
  ],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
